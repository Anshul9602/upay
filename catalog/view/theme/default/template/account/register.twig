									&nbsp;
									<input type="submit" value="{{ button_continue }}" class="btn btn-hero"/>
									<br>
								</div>
							</div>
						{% else %}
							<div class="buttons">
								<div class="">
									<input type="submit" value="{{ button_continue }}" class="btn btn-hero"/>
									<br>
								</div>
							</div>
						{% endif %}

					</div>


				</div><br>

			</fieldset>
			<div class="text-center">
