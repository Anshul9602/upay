{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <a type="submit" form="" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary" id="save-button"><i class="fa fa-save"></i></a>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success"><i class="fa fa-exclamation-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ heading_title }}</h3>
      </div>
      <div class="panel-body">
		  	<form method="post" enctype="multipart/form-data" id="form-settings" class="form-horizontal"> 
			<div class="form-group">
				<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
				<div class="col-sm-10">
				  <select name="total_category_discount_status" id="input-status" class="setting form-control selectpicker">
					{% if category_discount_status %}
					<option value="1" selected="selected">{{ text_enabled }}</option>
					<option value="0">{{ text_disabled }}</option>
					{% else %}
					<option value="1">{{ text_enabled }}</option>
					<option value="0" selected="selected">{{ text_disabled }}</option>
					{% endif %}
				  </select>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
				<div class="col-sm-10">
				  <input type="text" name="total_category_discount_sort_order" value="{{ category_discount_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="setting form-control" />
				</div>
			</div>
			</form>
			
			<form method="post" enctype="multipart/form-data" id="form-category-discount" class="form-horizontal">  	
              <div class="table-responsive">
                <table id="discount" class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <td></td>
                      <td class="text-left col-md-2">{{ entry_category }}</td>	
                      <td class="text-left col-md-2">{{ entry_customer_group }}</td>
                      <td class="text-right col-md-1">{{ entry_priority }}</td>
                      <td class="text-right col-md-1">{{ entry_percentage }}</td>
                      <td class="text-center col-md-1">{{ entry_affect }}</td>
                      <td class="text-left col-md-1">{{ entry_qty }}</td>
                      <td class="text-left col-md-1">{{ entry_date_start }}</td>
                      <td class="text-left col-md-2">{{ entry_date_end }}</td>
                      <td></td>
                    </tr>
                  </thead>
                  <tbody>
                  {% set discount_row=  0 %}
                    {% for category_discount in category_discounts %}
                    <tr id="discount-row{{ discount_row }}">
                      <td>{% if category_discount.status %}
                      		<a  id="active-{{ category_discount.category_discount_id }}" onclick="{% if permission %}deactivate({{ category_discount.category_discount_id }});{% endif %}" class="btn btn-sm btn-success" data-toggle="tooltip" title="{{ text_enabled }}">
                      		<i class="fa fa-minus-circle fa-rotate-90 fa-2x"></i>
                      		</a>
                      		<input name="category_discount[{{ discount_row }}][status]" id="status{{ category_discount.category_discount_id }}" type="hidden" value="1">
                      		{% else %}
                      		<a id="inactive-{{ category_discount.category_discount_id }}" onclick="{% if permission %}activate({{ category_discount.category_discount_id }});{% endif %}" class="btn btn-sm btn-danger" data-toggle="tooltip" title="{{ text_disabled }}"><i class="fa fa-minus-circle fa-rotate-90 fa-2x"></i></a>
                      		<input name="category_discount[{{ discount_row }}][status]" id="status{{ category_discount.category_discount_id }}" type="hidden" value="0">
                      		{% endif %}
                      </td>
                      <td class="text-left"><select name="category_discount[{{ discount_row }}][category_id]" class="form-control row{{ discount_row }} selectpicker" data-live-search="true" data-width="270">
                          {% for key, category in categories %}
							  <option value="{{ category.category_id }}"  {{ category.category_id == category_discount.category_id ? 'selected' : '' }} >{{ category.name }}</option>
							  {% if category.children is not empty %}
								<optgroup label="{{ category.name }}">
								{% for child in category.children %}
									<option value="{{ child.category_id }}" {{ child.category_id == category_discount.category_id ? 'selected' : '' }} >{{ child.name }}</option>
								{% endfor %}
								</optgroup>
							  {% endif %}
						  {% endfor %}
                        </select>
                      </td>	
                      <td class="text-left"><select name="category_discount[{{ discount_row }}][customer_group_id]" class="form-control row{{ discount_row }} selectpicker" data-live-search="true">
                        {% for customer_group in customer_groups %}
                          	{% if customer_group.customer_group_id  == category_discount.customer_group_id %}
                          <option value="{{ customer_group.customer_group_id }}" selected="selected">{{ customer_group.name }}</option>
                          {% else %}
                          <option value="{{ customer_group.customer_group_id }}">{{ customer_group.name }}</option>
						  {% endif %} 
						{% endfor %}
                        </select></td>
                      <td class="text-right"><input type="text" name="category_discount[{{ discount_row }}][priority]" value="{{ category_discount.priority }}" placeholder="{{ entry_priority }}" class="form-control row{{ discount_row }}" /></td>
                      <td class="text-right"><input type="text" name="category_discount[{{ discount_row }}][percentage]" value="{{ category_discount.percentage }}" placeholder="{{ entry_percentage }}" class="form-control row{{ discount_row }}" /></td>
                      <td class="text-right">
                      	<select name="category_discount[{{ discount_row }}][affect]" class="form-control selectpicker">
							{% if category_discount.affect is empty%}
								<option value="0" selected="selected">{{ entry_no }}</option>
							{% else %}
								<option value="0">{{ entry_no }}</option>
							{% endif %}
							{% if category_discount.affect %}	
								<option value="1" selected="selected">{{ entry_yes }}</option>
							{% else %}
								<option value="1">{{ entry_yes }}</option>
							{% endif %}	
						</select> 
                      </td>
                      <td class="text-right"><input type="text" name="category_discount[{{ discount_row }}][qty]" value="{{ category_discount.qty }}" placeholder="{{ entry_qty }}" class="form-control row{{ discount_row }}" /></td>
                      <td class="text-left" style="width: 20%;"><div class="input-group date">
                          <input type="text" name="category_discount[{{ discount_row }}][date_start]" value="{{ category_discount.date_start }}" placeholder="{{ entry_date_start }}" data-date-format="YYYY-MM-DD" class="form-control row{{ discount_row }}" />
                          <span class="input-group-btn">
                          <button class="btn btn-default" type="button"><i class="fa fa-calendar"></i></button>
                          </span></div></td>
                      <td class="text-left" style="width: 20%;"><div class="input-group date">
                          <input type="text" name="category_discount[{{ discount_row }}][date_end]" value="{{ category_discount.date_end }}" placeholder="{{ entry_date_end }}" data-date-format="YYYY-MM-DD" class="form-control row{{ discount_row }}" />
                          <span class="input-group-btn">
                          <button class="btn btn-default" type="button"><i class="fa fa-calendar"></i></button>
                          </span></div></td>
                      <td class="text-left"><button type="button" onclick="$('#discount-row{{ discount_row }}').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>
                    </tr>
                    {% set discount_row = discount_row + 1 %}
				  {% endfor %}
                  </tbody>
                  <tfoot>
                    <tr>
                      <td colspan="9"></td>
                      <td class="text-left"><button type="button" onclick="addDiscount();" data-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i></button></td>
                    </tr>
                  </tfoot>
                </table>
              </div>
        </form>
        <a class="btn btn-default" id="back-btn" href="{{ back_link }}"> < Back</a>
      </div>
    </div>
  </div>
  <script type="text/javascript"><!--
	
	var discount_row = {{ discount_row }};

	function addDiscount() {
		html  = '<tr id="discount-row' + discount_row + '">';
		html += '  <td><input name="category_discount[' + discount_row + '][status]" id="status' + discount_row + '" type="hidden" value="1"></td>';
		html += '  <td class="text-left"><select name="category_discount[' + discount_row + '][category_id]" class="form-control selectpicker" data-live-search="true">';
		{% for category in categories %}
			html += '    <option value="{{ category.category_id }}">{{ category.name|e('js') }}</option>';
			{% if category.children is not empty %}
				html += '    <optgroup label={{ category.name|e('js') }}>';
				{% for child in category.children %}
					html += '    <option value="{{ child.category_id }}">{{ child.name|e('js') }}</option>';
				{% endfor %}
				html += '    </optgroup>';
			{% endif %}
		{% endfor %}
		html += '  </select></td>';		
		html += '  <td class="text-left"><select name="category_discount[' + discount_row + '][customer_group_id]" class="form-control selectpicker" data-live-search="true">';
		{% for customer_group in customer_groups %}
			html += '    <option value="{{ customer_group.customer_group_id }}">{{ customer_group.name|e('js') }}</option>';
		{% endfor %}
		html += '  </select></td>';		
		html += '  <td class="text-right"><input type="text" name="category_discount[' + discount_row + '][priority]" value="" placeholder="{{ entry_priority }}" class="form-control" /></td>';
		html += '  <td class="text-right"><input type="text" name="category_discount[' + discount_row + '][percentage]" value="" placeholder="{{ entry_percentage }}" class="form-control" /></td>';
		html += '  <td class="text-center"><select name="category_discount[' + discount_row + '][affect]" class="form-control selectpicker">';
		html += '  <option value="0">{{ entry_no }}</option>';
		html += '  <option value="1">{{ entry_yes }}</option>';
		html += '  </select></td>';
		html += '  <td class="text-right"><input type="text" name="category_discount[' + discount_row + '][qty]" value="" placeholder="{{ entry_qty }}" class="form-control" /></td>';
		html += '  <td class="text-left"><div class="input-group date"><input type="text" name="category_discount[' + discount_row + '][date_start]" value="" placeholder="{{ entry_date_start }}" data-date-format="YYYY-MM-DD" class="form-control" /><span class="input-group-btn"><button type="button" class="btn btn-default"><i class="fa fa-calendar"></i></button></span></div></td>';
		html += '  <td class="text-left"><div class="input-group date"><input type="text" name="category_discount[' + discount_row + '][date_end]" value="" placeholder="{{ entry_date_end }}" data-date-format="YYYY-MM-DD" class="form-control" /><span class="input-group-btn"><button type="button" class="btn btn-default"><i class="fa fa-calendar"></i></button></span></div></td>';
		html += '  <td class="text-left"><button type="button" onclick="$(\'#discount-row' + discount_row + '\').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>';
		html += '</tr>';	
	
		$('#discount tbody').append(html);

		$('.date').datetimepicker({
			pickTime: false
		});
		
		$('.selectpicker').selectpicker({
		  size: 'auto',
		  container : 'body',
		  dropdownAlignRight: 'auto',
		  dropupAuto: false,
		  iconBase: 'fa',
		  tickIcon: 'fa-check',
		  selectedTextFormat: 'count > 3',
		  showTick: true
		});
		
		discount_row++;
	}
	
	
	{% if permission %}
	$('#save-button').click(function(){
		
		$.ajax({
			url:'index.php?route=extension/module/discounts_pack/discount_category/saveDiscount&user_token={{ user_token }}',
			type: 'post',
			dataType: 'json',
			beforeSend: function() {
				$('.alert').remove();
			},
			data: {
				setting: $("#form-settings").serialize(),
				category_discount: $('#form-category-discount').serialize(),
			},
			success: function(json) {
				alertJson('alert alert-success', json);
			},
			error: function(json) {
				alertJson('alert alert-warning', json);
			}
		});
		
		return false;
	});
	
	
	{% else %}
		$('#save-button').click(function(){
			$('.alert').remove();
			
			$(".panel").before('<div class="alert alert-warning">{{ error_permission }}</div>');
		});
	
	{% endif %}
	
	function alertJson(action, json) {
		
		$('.alert').remove();
		
		if (json['success']) {
			$(".panel").before('<div class="' + action + '">' + json['success'] + '</div>');
		} else if (json['error']) {
			$(".panel").before('<div class="' + action + '">' + json['error'] + '</div>');
		}
	}
	
	function activate(row) {
		
		$.ajax({
			url:'index.php?route=extension/module/discounts_pack/discount_category/activate&user_token={{ user_token }}',
			type: 'post',
			dataType: 'json',
			data: {
				row: row,
			},
			success: function(json) {
				alertJson('alert alert-success', json);
				$('#inactive-' + row).replaceWith('<a  id="active-' + row + '" onclick="{% if permission %}deactivate(' + row + ');{% endif %}" class="btn btn-sm btn-success" data-toggle="tooltip" title="{{ text_enabled }}"><i class="fa fa-minus-circle fa-rotate-90 fa-2x"></i></a>');
				$('#status' + row).val(1);
			},
			error: function(json) {
				alertJson('alert alert-warning', json);
			}
		});
	
	}
	
	function deactivate(row) {
		
		$.ajax({
			url:'index.php?route=extension/module/discounts_pack/discount_category/deactivate&user_token={{ user_token }}',
			type: 'post',
			dataType: 'json',
			data: {
				row: row,
			},
			success: function(json) {
				alertJson('alert alert-success', json);
				$('#active-' + row).replaceWith('<a id="inactive-' + row + '" onclick="{% if permission %}activate(' + row + ');{% endif %}" class="btn btn-sm btn-danger" data-toggle="tooltip" title="{{ text_disabled }}"><i class="fa fa-minus-circle fa-rotate-90 fa-2x"></i></a>');
				$('#status' + row).val(0);
			},
			error: function(json) {
				alertJson('alert alert-warning', json);
			}
		});
	
	}
	$('.date').datetimepicker({
		pickTime: false
	});

	$('.time').datetimepicker({
		pickDate: false
	});

	$('.datetime').datetimepicker({
		pickDate: true,
		pickTime: true
	});
	
	$('.selectpicker').selectpicker({
	  size: 'auto',
	  container : 'body',
	  dropdownAlignRight: 'auto',
	  dropupAuto: false,
	  iconBase: 'fa',
	  tickIcon: 'fa-check',
	  selectedTextFormat: 'count > 3',
	  showTick: true
	});

	
//--></script>
</div>
{{ footer }}